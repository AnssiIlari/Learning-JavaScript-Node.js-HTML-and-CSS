doctype html
html
  head
    title Add movie
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    )
  body
   div.container
    h1 New movie
    form(action='/addmovie', method='POST' class="form-label")
      div.form-group
        label(for="title") Title
        input#title.form-control(type="text", name="title")
      div.form-group
        label(for="director") Director
        input#director.form-control(type="text", name="director")
      div.form-group
        label(for="year") Year
        input#year.form-control(type="number", name="year") 
        br
      div
        input(type="submit", value="Add" class="btn btn-primary")