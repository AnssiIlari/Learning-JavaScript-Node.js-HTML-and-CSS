doctype html
html
  head
    title Customer 
    link(
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
     )
  body
    div.container
      div
        a(href='/addcustomer').btn.btn-primary Add customer
      div
        table.table.table-striped
          tbody
            thead
              tr
                td First name
                td Last name
                td Email
                td Phone
            each customer in customers
              tr 
                td #{customer.firstname}
                td #{customer.lastname}
                td #{customer.email}
                td #{customer.phone}